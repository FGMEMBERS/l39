<type>select</type>
<object-name>left-R60-pos-1</object-name>      
<condition>
<and>
<equals>
<property>sim/weight[0]/selected</property>
<value>R-60</value>
</equals>
<equals>
<property>controls/armament/station[0]/release</property>
<value>false</value>
</equals>
</and>
</condition>
</animation> 




