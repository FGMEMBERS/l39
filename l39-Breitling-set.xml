<PropertyList>
  <sim>
    <description>Aero Vodochody L-39 Breitling</description>
    <author>Fabrice KAUFFMANN</author>
    <status>alpha</status>
    <flight-model>yasim</flight-model>
    <aero>l39-Breitling-yasim</aero>	

    <startup>
      <splash-texture>Aircraft/l39/l39-Breitling-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/l39/Models/l39-Breitling.xml</path>
      <hide-tanks type="int">0</hide-tanks>
      <hide-lights type="int">1</hide-lights>	
    </model>

    <multiplay>
      <generic>
        <float n="2" alias="/position/gear-agl-m">  0 </float>  <!-- 11 altitude for MP shadow -->
        <int n="6" type="int">false</int>
        <int n="7" type="int">0</int>
      </generic>
    </multiplay>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <audible>true</audible>
      <path>Aircraft/l39/Sounds/l39-Breitling-sound.xml</path>
    </sound>

    <hud>
      <visibility>false</visibility>
    </hud>

    <virtual-cockpit archive="y">true</virtual-cockpit>

    <chase-distance-m type="double" archive="y">-20.0</chase-distance-m>

    <menubar>
      <default>
        <menu n="99">
          <label>l39-Breitling</label>
          <enabled type="bool">true</enabled>
          <item>
            <label>Show/Hide External Tanks</label>
            <binding>
              <command>property-toggle</command>
              <property>/sim/model/hide-tanks</property>
            </binding>
          </item>
          <item>
            <label>Switch Lights On/Off</label>
            <binding>
              <command>property-toggle</command>
              <property>/sim/model/hide-lights</property>
            </binding>
          </item>
          <item>
            <label>Select Livery</label>
            <binding>
              <command>nasal</command>
              <script>aircraft.livery.dialog.toggle()</script>
            </binding>
          </item>
        </menu>
      </default>
    </menubar>

    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">0.00</x-offset-m>
        <y-offset-m archive="y">-0.28</y-offset-m>
        <z-offset-m archive="y">-2.60</z-offset-m>
        <pitch-offset-deg>0</pitch-offset-deg>
        <default-field-of-view-deg>55</default-field-of-view-deg>
      </config>
    </view>
  </sim>

  <controls>
    <lighting>
      <strobe type="bool">true</strobe>
    </lighting>
    <gear>
      <brake-parking type="double">1.0</brake-parking>
    </gear>  
  </controls>

  <consumables>
    <fuel>
      <tank n="0">
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
      <tank n="1">
        <level-gal_us archive="y">970</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <nasal>
    <l39>
      <file>Aircraft/l39/Nasal/strobe.nas</file>
      <file>Aircraft/l39/Nasal/liveries.nas</file>
    </l39>
  </nasal>

</PropertyList>
